    <h1><%= @folder.name %>のメモ</h1>

    <!-- Bootstrapのボタンスタイルを適用 -->
    <%= link_to '新しいメモ', new_folder_memo_path(@folder), class: 'btn btn-primary mb-3' %>

    <!-- Bootstrapスタイルのリスト -->
    <ul class="list-group">
        <% @memos.each do |memo| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= memo.title %>
                <div>
                    <%= link_to '表示', folder_memo_path(@folder, memo), class: 'btn btn-secondary btn-sm' %>
                    <%= link_to '編集', edit_folder_memo_path(@folder, memo), class: 'btn btn-warning btn-sm' %>
                    <%= link_to '削除', folder_memo_path(@folder, memo), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
                </div>
            </li>
        <% end %>
    </ul>

    <%= link_to 'フォルダーに戻る', folders_path, class: 'btn btn-light mt-3' %>
